<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Game_Calculatron">


    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/volver"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/black"
        android:scaleType="fitCenter"
        android:src="@drawable/flecha_atras"
        app:layout_constraintBottom_toBottomOf="@id/guidelineh1"
        app:layout_constraintEnd_toStartOf="@id/textoSuperior"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textoSuperior"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="Calcula Tron"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@id/guidelineh1"
        app:layout_constraintEnd_toStartOf="@id/messi"
        app:layout_constraintHorizontal_weight="8"
        app:layout_constraintStart_toEndOf="@+id/volver"
        app:layout_constraintTop_toTopOf="parent" />

    <Space
        android:id="@+id/messi"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/black"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@id/guidelineh1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/textoSuperior"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinev1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinev2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineh1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.06" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineh2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinemedio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <TextView
        android:id="@+id/acertadasCuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bordesblancos_redondo"
        android:padding="10dp"
        android:text="Acertadas: 0"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/guidelinev1"
        app:layout_constraintTop_toTopOf="@id/guidelineh1" />

    <TextView
        android:id="@+id/Cuenta_atras_gameCalc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="60"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@id/falladasCuenta"
        app:layout_constraintEnd_toEndOf="@id/guidelinev2"
        app:layout_constraintStart_toEndOf="@id/guidelinev1"
        app:layout_constraintTop_toBottomOf="@id/guidelineh1" />

    <TextView
        android:id="@+id/falladasCuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bordesblancos_redondo"
        android:padding="10dp"
        android:text="Falladas: 0"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/acertadasCuenta"
        app:layout_constraintEnd_toEndOf="@id/guidelinev2"
        app:layout_constraintTop_toTopOf="@id/guidelineh1" />

    <TextView
        android:id="@+id/resultado_anterior"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/white"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintEnd_toEndOf="@id/guidelinev2"
        app:layout_constraintStart_toStartOf="@id/guidelinev1"
        app:layout_constraintTop_toBottomOf="@id/Cuenta_atras_gameCalc"
        app:layout_constraintBottom_toTopOf="@id/resultado_actual"/>

    <TextView
        android:id="@+id/resultado_actual"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="2"
        android:background="@drawable/white3_cornersredondos"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@id/guidelinev2"
        app:layout_constraintStart_toStartOf="@id/guidelinev1"
        app:layout_constraintTop_toBottomOf="@id/resultado_anterior"
        app:layout_constraintBottom_toTopOf="@id/resultado_siguiente"/>

    <TextView
        android:id="@+id/resultado_siguiente"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/white"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintEnd_toEndOf="@id/guidelinev2"
        app:layout_constraintStart_toStartOf="@id/guidelinev1"
        app:layout_constraintTop_toBottomOf="@id/resultado_actual"
        app:layout_constraintBottom_toTopOf="@id/guidelinemedio"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/boton_num7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/guidelinemedio"
        app:layout_constraintStart_toStartOf="@id/guidelinev1"
        app:layout_constraintEnd_toStartOf="@id/boton_num8"
        app:layout_constraintBottom_toTopOf="@id/boton_num4"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintHorizontal_weight="1"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/boton_num8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/guidelinemedio"
        app:layout_constraintStart_toEndOf="@id/boton_num7"
        app:layout_constraintEnd_toStartOf="@id/boton_num9"
        app:layout_constraintBottom_toTopOf="@id/boton_num5"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintHorizontal_weight="1"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/boton_num9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/guidelinemedio"
        app:layout_constraintStart_toEndOf="@id/boton_num8"
        app:layout_constraintEnd_toStartOf="@id/boton_reinicar_operacion"
        app:layout_constraintBottom_toTopOf="@id/boton_num6"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintHorizontal_weight="1"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/boton_reinicar_operacion"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/guidelinemedio"
        app:layout_constraintStart_toEndOf="@id/boton_num9"
        app:layout_constraintEnd_toStartOf="@id/guidelinev2"
        app:layout_constraintBottom_toTopOf="@id/boton_igual"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintHorizontal_weight="1"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/boton_num4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/boton_num7"
        app:layout_constraintStart_toEndOf="@id/guidelinev1"
        app:layout_constraintEnd_toStartOf="@id/boton_num5"
        app:layout_constraintBottom_toTopOf="@id/boton_num1"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintHorizontal_weight="1"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/boton_num5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/boton_num8"
        app:layout_constraintStart_toEndOf="@id/boton_num4"
        app:layout_constraintEnd_toStartOf="@id/boton_num6"
        app:layout_constraintBottom_toTopOf="@id/boton_num2"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintHorizontal_weight="1"/>


    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/boton_num6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/boton_num9"
        app:layout_constraintStart_toEndOf="@id/boton_num5"
        app:layout_constraintEnd_toStartOf="@id/boton_igual"
        app:layout_constraintBottom_toTopOf="@id/boton_num3"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintHorizontal_weight="1"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/boton_igual"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/boton_reinicar_operacion"
        app:layout_constraintStart_toEndOf="@id/boton_num6"
        app:layout_constraintEnd_toStartOf="@id/guidelinev2"
        app:layout_constraintBottom_toTopOf="guidelineh2"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintHorizontal_weight="1"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/boton_num1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/boton_num4"
        app:layout_constraintStart_toStartOf="@id/guidelinev1"
        app:layout_constraintEnd_toStartOf="@id/boton_num2"
        app:layout_constraintBottom_toTopOf="@id/boton_num0"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintHorizontal_weight="1"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/boton_num2"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintTop_toBottomOf="@id/boton_num5"
        app:layout_constraintStart_toEndOf="@id/boton_num1"
        app:layout_constraintEnd_toStartOf="@id/boton_num3"
        app:layout_constraintBottom_toTopOf="@id/boton_num0"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintHorizontal_weight="1"
        />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/boton_num3"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintTop_toBottomOf="@+id/boton_num6"
        app:layout_constraintStart_toEndOf="@id/boton_num2"
        app:layout_constraintEnd_toStartOf="@+id/boton_igual"
        app:layout_constraintBottom_toTopOf="@id/eliminar_ultimo_digito"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintHorizontal_weight="1"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/boton_num0"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintTop_toBottomOf="@+id/boton_num1"
        app:layout_constraintStart_toStartOf="@id/guidelinev1"
        app:layout_constraintEnd_toStartOf="@id/eliminar_ultimo_digito"
        app:layout_constraintBottom_toBottomOf="@id/guidelineh2"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintHorizontal_weight="1"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/eliminar_ultimo_digito"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintTop_toBottomOf="@id/boton_num3"
        app:layout_constraintStart_toEndOf="@id/boton_num0"
        app:layout_constraintEnd_toStartOf="@id/boton_igual"
        app:layout_constraintBottom_toBottomOf="@id/guidelineh2"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintHorizontal_weight="1"/>






















</androidx.constraintlayout.widget.ConstraintLayout>